---
import config from "../config.json";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<header>
    <h1>{title}</h1>
    <p>{config.touchWarning}</p>
</header>

<style lang="scss">
    header {
        text-align: center;
        font-style: italic;
    }
    
    h1 {
        font-size: 3rem;
    }

    p {
        color: red;
        font-size: 1.125rem;
        display: none;

        @media (any-pointer: course) {
            display: block;
        }
    }
</style>
